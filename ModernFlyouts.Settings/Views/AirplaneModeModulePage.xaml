<Page
    x:Class="ModernFlyouts.Settings.Views.AirplaneModeModulePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ModernFlyouts.Settings.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls" xmlns:settings="using:ModernFlyouts.Settings.SettingsControls" xmlns:icons="using:Fluent.Icons"
    mc:Ignorable="d">
    <!--Style="{StaticResource PageStyle}"-->

    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="40, 50, 40, 100">
            <TextBlock FontSize="24" FontWeight="SemiBold" Margin="4, 4, 4, 24">Airplane mode</TextBlock>
            <settings:SettingsBlockControl Title="Airplane mode" Margin="2" Description="Toggle Airplane mode Flyout">
                <settings:SettingsBlockControl.Icon>
                    <icons:FluentIconElement VerticalAlignment="Center" Symbol="Airplane24"/>
                </settings:SettingsBlockControl.Icon>
                <ToggleSwitch OnContent="On" HorizontalAlignment="Right" OffContent="Off"/>
            </settings:SettingsBlockControl>
        </StackPanel>
    </Grid>
</Page>
